    <!--custom input-->
    <Style x:Key="myInputWithPlaceholder"
           TargetType="TextBox">
        <Setter Property="TextBlock.Foreground"
                Value="Black" />
        <Setter Property="TextBlock.FontFamily"
                Value="{DynamicResource fontFamily}" />
        <Setter Property="TextBlock.FontSize"
                Value="{DynamicResource captionFontSize}" />
        <Setter Property="TextBlock.FontWeight"
                Value="Regular" />
        <Setter Property="Width"
                Value="328" />
        <Setter Property="MinHeight"
                Value="51" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <Border CornerRadius="25"
                                Background="White"
                                BorderThickness="1">
                            <StackPanel VerticalAlignment="Center"
                                        Margin="24 11"
                                        Orientation="Vertical">
                                <TextBlock Text="{Binding ElementName=a, Path=Tag}"
                                           Style="{DynamicResource SmallCaption}"
                                           Margin="1 0 0 2">
                                </TextBlock>
                                <TextBox Padding="0"
                                         Text="{Binding ElementName=a, Path=Content}"
                                         Foreground="Black"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         TextBlock.LineStackingStrategy="BlockLineHeight"
                                         TextBlock.LineHeight="20"></TextBox>
                            </StackPanel>
                        </Border>
                        <ContentPresenter VerticalAlignment="Center"
                                          x:Name="a"
                                          Visibility="Hidden"
                                          Content="{TemplateBinding Text}"
                                          Tag="{TemplateBinding Tag}">
                        </ContentPresenter>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="4"
                                  Color="#000000"
                                  Opacity="0.25"
                                  Direction="-90">
                </DropShadowEffect>
            </Setter.Value>
        </Setter>
    </Style>

