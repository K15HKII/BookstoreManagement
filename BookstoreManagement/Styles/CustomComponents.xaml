    <!--custom button-->
    <Style x:Key="PrimaryButton"
           TargetType="Button">
        <Setter Property="MinWidth"
                Value="40" />
        <Setter Property="Height"
                Value="36" />
        <Setter Property="FontFamily"
                Value="{DynamicResource fontFamily}" />
        <Setter Property="FontSize"
