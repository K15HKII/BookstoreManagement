<Window x:Class="BookstoreManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookstoreManagement"
        xmlns:components="clr-namespace:BookstoreManagement.Components"
        xmlns:views="clr-namespace:BookstoreManagement.Views"
        xmlns:api="clr-namespace:BookstoreManagement.Data.Model.Api"
        mc:Ignorable="d"
        Padding="0"
        Title="MainWindow"
        MinHeight="720"
        MinWidth="1280"
        WindowStartupLocation="CenterScreen">
    <ScrollViewer>
        <ItemsControl x:Name="itemsControl">
            <ItemsControl.Resources>
                <DataTemplate DataType="{x:Type api:BookProfile}">
                    <components:ProductCard/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type api:CartItem}">
                    <components:ucVoucher/>
                </DataTemplate>
            </ItemsControl.Resources>
        </ItemsControl>
    </ScrollViewer>
</Window>