<Window x:Class="BookstoreManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:h="clr-namespace:BookstoreManagement.Components.Header"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookstoreManagement"
        xmlns:component="clr-namespace:BookstoreManagement.Components"
        xmlns:panel="clr-namespace:BookstoreManagement.Components.Panels"
        xmlns:views="clr-namespace:BookstoreManagement.Views"
        xmlns:api="clr-namespace:BookstoreManagement.Data.Model.Api"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Padding="0"
        Title="MainWindow"
        MinHeight="720"
        MinWidth="1280"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
    </Window.Resources>

    <Grid>
        <materialDesign:RatingBar Value="3"
                                  Max="5"
                                  Foreground="{StaticResource SolidYellowColor}"
                                  x:Name="CustomRatingBar" />

        <TextBlock Text="{Binding ElementName=CustomRatingBar, Path=Value, StringFormat=Rating: {0}, Mode=TwoWay}"
                   VerticalAlignment="Top"
                   Margin="0,40,0,0" />
    </Grid>

	
</Window>