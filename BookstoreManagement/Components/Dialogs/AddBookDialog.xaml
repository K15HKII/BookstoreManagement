<UserControl x:Class="BookstoreManagement.Components.AddBookDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:BookstoreManagement.Components"
             mc:Ignorable="d"
             d:DesignWidth="735"
             Width="735">


    <Border CornerRadius="16"
            Background="White"
            Padding="42 20 42 32">
        <StackPanel x:Name="root">
            <TextBlock Style="{StaticResource Title}"
                       Foreground="{StaticResource SolidDarkGrayColor}"
                       Text="{Binding Id}"
                       Margin="0 0 0 24" />

            <StackPanel Margin="0 0 0 24">
                <TextBlock Style="{StaticResource Heading3}"
                           Foreground="Black"
                           Text="Tên sản phẩm"
                           Margin="0 0 0 8" />
                <TextBox Width="auto"
                         Style="{StaticResource myInput}"
                         Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         VerticalContentAlignment="Center"/>
            </StackPanel>

            <Grid Margin="0 0 0 24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="24" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock Style="{StaticResource Heading3}"
                               Foreground="Black"
                               Text="Giá"
                               VerticalAlignment="Center"
                               Margin="0 0 16 0" />
                    <TextBox Grid.Column="1"
                             Style="{StaticResource myInput}"
                             VerticalContentAlignment="Center"
                             Text="{Binding Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Width="auto"/>
                </Grid>

                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock Style="{StaticResource Heading3}"
                               Foreground="Black"
                               Text="Số lượng"
                               VerticalAlignment="Center"
                               Margin="0 0 16 0" />
                    <TextBox Grid.Column="1"
                             Style="{StaticResource myInput}"
                             VerticalContentAlignment="Center"
                             Text="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Width="auto" />
                </Grid>

            </Grid>

            <StackPanel Margin="0 0 0 24">
                <TextBlock Style="{StaticResource Heading3}"
                           Foreground="Black"
                           Text="Nhà cung cấp"
                           Margin="0 0 0 8" />
                <ComboBox Width="auto" 
                          ItemsSource="{Binding Source={StaticResource PublisherProvider}, Path=Source}"
                          SelectedItem="{Binding Publisher, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          DisplayMemberPath="Name"/>
            </StackPanel>
            <StackPanel Margin="0 0 0 24">
                <TextBlock Style="{StaticResource Heading3}"
                           Foreground="Black"
                           Text="Phân loại"
                           Margin="0 0 0 8"
                           VerticalAlignment="Center" />
                <ListView>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBox Style="{StaticResource myInput}"
                                     Text="them"
                                     Width="{Binding ElementName=root, Path=ActualWidth}">
                            </TextBox>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <ComboBox />

            </StackPanel>

            <StackPanel Margin="0 0 0 24">
                <TextBlock Style="{StaticResource Heading3}"
                           Foreground="Black"
                           Text="Hình ảnh"
                           Margin="0 0 0 8"
                           VerticalAlignment="Center" />
                <StackPanel Orientation="Horizontal">
                    <!--image-->
                    <ListView>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Button Padding="0"
                                        Width="138"
                                        Height="138">
                                    <Image></Image>
                                </Button>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <!--open file dialog-->
                    <Button Padding="0"
                            Width="138"
                            Height="138">
                        <ContentControl Content="{StaticResource btnAddImage}" 
/>
                    </Button>
                </StackPanel>
            </StackPanel>

            <StackPanel Margin="0 0 0 24">
                <TextBlock Style="{StaticResource Heading3}"
                           Foreground="Black"
                           Text="Mô tả"
                           Margin="0 0 0 8" />
                <TextBox Style="{StaticResource myInput}"
                         TextWrapping="WrapWithOverflow"
                         Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="auto"
                         VerticalContentAlignment="Top" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Style="{StaticResource SecondButton}"
                        Width="97"
                        Command="{Binding CloseCommand}"
                        Margin="0 0 16 0"
                        Content="Huỷ"></Button>
                <Button Style="{StaticResource PrimaryButton}"
                        Command="{Binding AcceptCommand}"
                        Width="97"
                        Content="Thêm"></Button>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
