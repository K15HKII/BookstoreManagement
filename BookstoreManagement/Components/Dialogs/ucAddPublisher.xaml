<UserControl x:Class="BookstoreManagement.Components.ucAddPublisher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookstoreManagement.Components"
             mc:Ignorable="d" 
             d:DesignWidth="644">
    <Border CornerRadius="16"
            Background="White"
            Padding="42 32">

        <StackPanel Background="Transparent">
            <Border Width="191"
                    Height="191"
                    CornerRadius="100"
                    Background="{StaticResource SolidLightGrayColor}"
                    Margin="0 0 0 16">
                <Border.BorderBrush>
                    <ImageBrush
                        ImageSource="{Binding Image}"
                    />
                </Border.BorderBrush>
            </Border>

            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Center"
                        Margin="0 0 0 32">
                <TextBlock Style="{StaticResource Title}"
                           Foreground="{StaticResource SolidDarkGrayColor}"
                           Text="{Binding Id}"
                           VerticalAlignment="Center"
                           Margin="0 0 16 0" />
                <TextBox Style="{StaticResource myInput}"
                           Foreground="Black"
                           Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           VerticalAlignment="Center"
                           Margin="0 0 16 0" />
            </StackPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <Grid Margin="0 0 0 12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <TextBox Style="{StaticResource myInputWithPlaceHolder}"
                                 Text="{Binding CreateDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Tag="Ngay thành lập"
                                 Width="auto" />
                        <TextBox Style="{StaticResource myInputWithPlaceHolder}"
                                 Text="{Binding Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Tag="So dien thoai"
                                 Width="auto"
                                 Grid.Column="2" />
                    </Grid>

                    <TextBox Style="{StaticResource myInputWithPlaceHolder}"
                             Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Tag="Email"
                             Width="auto"
                             Margin="0 0 0 12" />

                    <TextBox Style="{StaticResource myInputWithPlaceHolder}"
                             Text="{Binding Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Tag="Dia chi"
                             Width="auto"
                              />
                </StackPanel>

                <StackPanel Grid.Column="2">

                    <Grid Margin="0 0 0 12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Style="{StaticResource Title}"
                                   Foreground="{StaticResource SolidDarkGrayColor}"
                                   Text="Ngay tham gia"
                                   Margin="0 0 16 0"
                                   VerticalAlignment="Center" />
                        <TextBox Style="{StaticResource myInput}"
                                 Text="{Binding CoopDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="auto"
                                 Grid.Column="1" />
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Style="{StaticResource Title}"
                                   Foreground="{StaticResource SolidDarkGrayColor}"
                                   Text="The loai"
                                   Margin="0 0 16 0"
                                   VerticalAlignment="Center" />
                        <TextBox Style="{StaticResource myInput}"
                                 Text="{Binding BookType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="auto"
                                 Grid.Column="1" />
                    </Grid>
                </StackPanel>

            </Grid>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 32 0 0">
                <Button Style="{StaticResource SecondButton}"
                        Command="{Binding CloseCommand}"
                        Width="97"
                        Margin="0 0 16 0"
                        Content="Huy"></Button>
                <Button Style="{StaticResource PrimaryButton}"
                        Command="{Binding AcceptCommand}"
                        Width="97"
                        Content="Them"></Button>
            </StackPanel>

        </StackPanel>

    </Border>
</UserControl>
