                    </Grid.ColumnDefinitions>

                    <TextBox Style="{StaticResource myInputWithPlaceholder}"
                             Width="auto"
                             Text="abc"
                             Tag="Ten san pham" />
                    <!--custom quantity-->
                    <Border Grid.Column="2"></Border>
                    <!--custom add btn-->
                    <Border Grid.Column="3"></Border>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="195"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <!--fix combobox-->
                        <ComboBox Style="{StaticResource myCombobox}"
                                 Width="auto"
                                 Text="abc"
                                 Tag="Phan loai"
                                 Margin="0 0 0 8" />
                        <TextBox Style="{StaticResource myInputWithPlaceholder}"
                                 Width="auto"
                                 Text="abc"
                                 Tag="Gia san pham"
                                 Margin="0 0 0 8" />
                        <TextBox Style="{StaticResource myInputWithPlaceholder}"
                                 Width="auto"
                                 Text="abc"
                                 Tag="Voucher"/>
