                    </Grid.ColumnDefinitions>

                    <TextBox Style="{StaticResource myInputWithPlaceholder}"
                             Width="auto"
                             Text="abc"
                             Tag="Ma khach hang" />
                    <TextBox Style="{StaticResource myInputWithPlaceholder}"
                             Width="auto"
                             Text="abc"
                             Tag="Ten khach hang" 
