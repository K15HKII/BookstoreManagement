<UserControl x:Class="BookstoreManagement.Components.PendingBillCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookstoreManagement.Components"
             xmlns:api="clr-namespace:BookstoreManagement.Data.Model.Api"
             xmlns:model="clr-namespace:BookstoreManagement.Data.Model"
             mc:Ignorable="d" 
             d:DesignHeight="114" d:DesignWidth="449">
    
    <Border CornerRadius="8"
            Background="White"
            Padding="0 0 20 0">
        <Grid Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="114"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border CornerRadius="8"
                    BorderThickness="1"
                    BorderBrush="Black">
                <Image Source="{Binding Image}"/>
            </Border>
            <Grid Grid.Column="1"
                  Margin="16 14 0 14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="67"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Style="{StaticResource Title}"
                               Foreground="Black"
                               Margin="0 0 0 6"
                               Text="{Binding Id}"/>
                    <TextBlock Style="{StaticResource Body}"
                               Foreground="{StaticResource SolidPrimaryColor}"
                               Text="{Binding Owner}"
                               Margin="0 0 0 16"/>
                    <TextBlock Style="{StaticResource Body}"
                               Foreground="{StaticResource SolidOrangeColor}"
                               Text="{Binding Price}"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SmallCaption}"
                                   Foreground="{StaticResource SolidDarkGrayColor}"
                                   Margin="0 0 0 2"
                                   Text="Ngày tạo đơn"
                                   HorizontalAlignment="Right"/>
                        <TextBlock Style="{StaticResource Caption}"
                                   Foreground="{StaticResource SolidDarkPrimaryColor}"
                                   Text="{Binding Date}"/>
                    </StackPanel>

                    <ToggleButton Style="{StaticResource myCheckBox}"
                                  Width="24"
                                  Height="24"
                                  HorizontalAlignment="Right"
                                  Margin="0 34 0 0" />
                </StackPanel>
            </Grid>
        </Grid>

        <Border.Effect>
            <DropShadowEffect BlurRadius="4"
                              Color="#000000"
                              Opacity="0.25"
                              Direction="-90">
            </DropShadowEffect>
        </Border.Effect>
        
    </Border>
    
</UserControl>
