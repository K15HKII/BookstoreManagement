<UserControl x:Class="BookstoreManagement.Components.ucCustomerDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:BookstoreManagement.Components"
             mc:Ignorable="d"
             d:DesignWidth="735">

    <UserControl.Resources>
        
    </UserControl.Resources>

    <!--<materialDesign:DialogHost
        Identifier="edit">-->
        <Border CornerRadius="16"
            Background="White"
            Padding="42 32">
        <StackPanel>
            <Grid Margin="0 0 0 24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="24" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <Border Width="191"
                            Height="191"
                            CornerRadius="100"
                            Background="{StaticResource SolidLightGrayColor}"
                            Margin="0 0 0 16" >
                        <Border.BorderBrush>
                            <ImageBrush
                                ImageSource="{Binding Image}"
                            />
                        </Border.BorderBrush>
                        </Border>
                        <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Center">
                        <TextBlock Style="{StaticResource Title}"
                                   Foreground="{StaticResource SolidDarkGrayColor}"
                                   VerticalAlignment="Center"
                                   Text="{Binding Id}" />
                        <TextBlock Style="{StaticResource Heading3}"
                                   Foreground="Black"
                                   Margin="12 0 0 0"
                                   Text="{Binding Name}" />
                    </StackPanel>
                </StackPanel>

                <DockPanel Grid.Column="2"
                           LastChildFill="False">
                    <TextBlock Style="{StaticResource Title}"
                               Foreground="{StaticResource SolidOrangeColor}"
                               HorizontalAlignment="Right"
                               Text="Khách quen" 
                               DockPanel.Dock="Top"/>

                    <StackPanel DockPanel.Dock="Bottom">
                        <Button Width="auto"
                                Height="50"
                                Style="{StaticResource myButtonForShowDialog}"
                                Content="Liên kết mạng xã hội"
                                Margin="0 0 0 10"
                                HorizontalContentAlignment="Center">
                        </Button>

                        <StackPanel>
                            <Border Padding="12 8">
                                <DockPanel LastChildFill="False">
                                    <TextBlock Style="{StaticResource Caption}"
                                               Foreground="{StaticResource SolidDarkGrayColor}"
                                               Text="Facebook"
                                               VerticalAlignment="Center" />
                                    <TextBlock Style="{StaticResource Body}"
                                               Foreground="Black"
                                               DockPanel.Dock="Right"
                                               Text="{Binding FaceBook}" />
                                </DockPanel>


                            </Border>

                            <Border Padding="12 8">
                                <DockPanel LastChildFill="False">
                                    <TextBlock Style="{StaticResource Caption}"
                                               Foreground="{StaticResource SolidDarkGrayColor}"
                                               Text="Instagram"
                                               VerticalAlignment="Center" />
                                    <TextBlock Style="{StaticResource Body}"
                                               Foreground="Black"
                                               DockPanel.Dock="Right"
                                               Text="{Binding Instagram}" />
                                </DockPanel>


                            </Border>
                        </StackPanel>
                    </StackPanel>
                    
                </DockPanel>

            </Grid>

            <Grid Margin="0 0 0 24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel DockPanel.Dock="Bottom">
                    <Button Style="{StaticResource myButtonForShowDialog}"
                            Width="auto"
                            Height="50"
                            Content="Thông tin cá nhân"
                            Margin="0 0 0 10">
                        </Button>

                        <StackPanel>
                        <Border Padding="12 8">
                            <DockPanel LastChildFill="False">
                                <TextBlock Style="{StaticResource Caption}"
                                           Foreground="{StaticResource SolidDarkGrayColor}"
                                           Text="Số điện thoại"
                                           VerticalAlignment="Center" />
                                <TextBlock Style="{StaticResource Body}"
                                           Foreground="Black"
                                           DockPanel.Dock="Right"
                                           Text="{Binding Phone}" />
                            </DockPanel>
                        </Border>

                        <Border Padding="12 8">
                            <DockPanel LastChildFill="False">
                                <TextBlock Style="{StaticResource Caption}"
                                           Foreground="{StaticResource SolidDarkGrayColor}"
                                           Text="Ngày sinh"
                                           VerticalAlignment="Center" />
                                <TextBlock Style="{StaticResource Body}"
                                           Foreground="Black"
                                           DockPanel.Dock="Right"
                                           Text="{Binding BirthDay}" />
                            </DockPanel>
                        </Border>

                        <Border Padding="12 8">
                            <DockPanel LastChildFill="False">
                                <TextBlock Style="{StaticResource Caption}"
                                           Foreground="{StaticResource SolidDarkGrayColor}"
                                           Text="Giới tính"
                                           VerticalAlignment="Center" />
                                <TextBlock Style="{StaticResource Body}"
                                           Foreground="Black"
                                           DockPanel.Dock="Right"
                                           Text="{Binding Gender}" />
                            </DockPanel>
                        </Border>

                        <Border Padding="12 8">
                            <DockPanel LastChildFill="False">
                                <TextBlock Style="{StaticResource Caption}"
                                           Foreground="{StaticResource SolidDarkGrayColor}"
                                           Text="Địa chỉ"
                                           VerticalAlignment="Center" />
                                <TextBlock Style="{StaticResource Body}"
                                           Foreground="Black"
                                           DockPanel.Dock="Right"
                                           Text="{Binding Address}" />
                            </DockPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <Button Style="{StaticResource myButtonForShowDialog}"
                            Width="auto"
                            Height="50"
                            Content="Đổi mật khẩu"
                            Margin="0 0 0 10"></Button>
                    <Button Style="{StaticResource myButtonForShowDialog}"
                            Width="auto"
                            Height="50"
                            Content="Xoá tài khoản"></Button>
                </StackPanel>

            </Grid>

            <!--<DockPanel LastChildFill="False"
                       Margin="0 0 0 16">
                <TextBlock Style="{StaticResource Heading3}"
                           Foreground="Black"
                           Text="Don da mua" />
                <TextBlock Style="{StaticResource Heading3}"
                           Foreground="{StaticResource SolidOrangeColor}"
                           Text="{Binding OrderBillQuantity}"
                           DockPanel.Dock="Right" />
            </DockPanel>

            <DockPanel LastChildFill="False"
                       Margin="0 0 0 24">
                <TextBlock Style="{StaticResource Caption}"
                           Foreground="{StaticResource SolidDarkGrayColor}"
                           Text="Da dat"
                           VerticalAlignment="Center" />
                <TextBlock Style="{StaticResource Title}"
                           Foreground="{StaticResource SolidDarkGrayColor}"
                           Text="{Binding BoughtBillQuantity}"
                           DockPanel.Dock="Right" />
            </DockPanel>

            <DockPanel LastChildFill="False"
                       Margin="0 0 0 24">
                <TextBlock Style="{StaticResource Heading3}"
                           Foreground="Black"
                           Text="Thu nhap tu khach hang" />
                <TextBlock Style="{StaticResource Heading3}"
                           Foreground="{StaticResource SolidOrangeColor}"
                           Text="{Binding IncomeCustomer}"
                           DockPanel.Dock="Right" />
            </DockPanel>-->

            <DockPanel LastChildFill="False"
                       Margin="0 0 0 32">
                <TextBlock Style="{StaticResource Heading3}"
                           Foreground="Black"
                           Text="Ngày tham gia" />
                <TextBlock Style="{StaticResource Title}"
                           Foreground="{StaticResource SolidPrimaryColor}"
                           Text="{Binding CreateAt}"
                           DockPanel.Dock="Right" 
                           VerticalAlignment="Center"/>
            </DockPanel>

            <!--button-->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Style="{StaticResource SecondButton}"
                        Command="{Binding CloseCommand}"
                        Width="97"
                        Margin="0 0 16 0"
                        Content="Huỷ"></Button>
                <Button Style="{StaticResource PrimaryButton}"
                        Command="{Binding OpenEditCommand}"
                        Width="97"
                        Content="Cập nhật"></Button>
            </StackPanel>

        </StackPanel>

    </Border>
    <!--
    </materialDesign:DialogHost>
    -->

</UserControl>
