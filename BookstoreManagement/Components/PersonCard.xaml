<UserControl x:Class="BookstoreManagement.Components.PersonCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookstoreManagement.Components"
             xmlns:shapes="clr-namespace:BookstoreManagement.Components.Shapes"
             mc:Ignorable="d" 
             d:DesignHeight="393" d:DesignWidth="210">
    <UniformGrid Rows="6">
        <CheckBox HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 0 8 0" Width="24" Height="24"/>
        <Border CornerRadius="50" VerticalAlignment="Center" HorizontalAlignment="Center" 
                Width="126" Height="126"/>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" />
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" />
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" />
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" />
    </UniformGrid>
</UserControl>
